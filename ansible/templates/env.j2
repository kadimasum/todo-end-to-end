# Django Configuration
DEBUG={{ django_debug | lower }}
SECRET_KEY={{ django_secret_key }}
ALLOWED_HOSTS={{ django_allowed_hosts | join(',') }}

# Database Configuration
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}

# Redis Configuration
REDIS_URL=redis://{{ redis_host }}:{{ redis_port }}/{{ redis_db }}

# Static Files Configuration
STATIC_URL={{ static_url }}
STATIC_ROOT={{ static_root }}
MEDIA_URL={{ media_url }}
MEDIA_ROOT={{ media_root }}

# Email Configuration
EMAIL_BACKEND={{ email_backend | default('django.core.mail.backends.console.EmailBackend') }}
EMAIL_HOST={{ email_host | default('localhost') }}
EMAIL_PORT={{ email_port | default('587') }}
EMAIL_USE_TLS={{ email_use_tls | default('True') | lower }}
EMAIL_HOST_USER={{ email_host_user | default('') }}
EMAIL_HOST_PASSWORD={{ email_host_password | default('') }}

# Cache Configuration
CACHE_BACKEND={{ cache_backend | default('django.core.cache.backends.locmem.LocMemCache') }}
CACHE_LOCATION={{ cache_location | default('') }}

# Session Configuration
SESSION_ENGINE={{ session_engine | default('django.contrib.sessions.backends.db') }}
SESSION_CACHE_ALIAS={{ session_cache_alias | default('default') }}
SESSION_COOKIE_AGE={{ session_cookie_age | default('1209600') }}

# Security Settings
SECURE_SSL_REDIRECT={{ secure_ssl_redirect | default('False') | lower }}
SESSION_COOKIE_SECURE={{ session_cookie_secure | default('False') | lower }}
CSRF_COOKIE_SECURE={{ csrf_cookie_secure | default('False') | lower }}
SECURE_HSTS_SECONDS={{ secure_hsts_seconds | default('0') }}
SECURE_HSTS_INCLUDE_SUBDOMAINS={{ secure_hsts_include_subdomains | default('False') | lower }}
SECURE_HSTS_PRELOAD={{ secure_hsts_preload | default('False') | lower }}

# Environment
ENVIRONMENT={{ environment }}
APP_URL={{ app_url | default('') }}
API_URL={{ api_url | default('') }}

# Logging
LOG_LEVEL={{ log_level | default('INFO') }}
LOG_FILE={{ log_file | default('/var/log/todoapp/django.log') }}

# Performance
DJANGO_WORKERS={{ django_workers | default('3') }}
DJANGO_TIMEOUT={{ django_timeout | default('120') }}
DJANGO_MAX_REQUESTS={{ django_max_requests | default('1000') }}
DJANGO_MAX_REQUESTS_JITTER={{ django_max_requests_jitter | default('100') }}
